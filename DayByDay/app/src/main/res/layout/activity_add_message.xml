<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TeaGreen"
    android:orientation="vertical"
    tools:context=".DailyAffirmations">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="DAILY AFFIRMATIONS"
        android:textColor="@color/BlueSapphire"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="Add your own affirmation!"
        android:textColor="@color/BlueSapphire"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="start|center_horizontal|top"
        android:inputType="textMultiLine"
        android:shadowColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/MediumAquamarine"
        android:text="add message"
        android:textStyle="bold" />

</LinearLayout>