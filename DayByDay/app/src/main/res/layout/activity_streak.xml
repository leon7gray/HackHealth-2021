<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TeaGreen"
    android:orientation="vertical"
    tools:context=".DailyAffirmations">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="CONGRATS"
        android:textColor="@color/BlueSapphire"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStreakName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="Name"
        android:textColor="@color/BlueSapphire"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="YOU HAVE A"
        android:textColor="@color/BlueSapphire"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="Streak"
        android:textColor="@color/BlueSapphire"
        android:textSize="90sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="DAY STEAK"
        android:textColor="@color/BlueSapphire"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:text="For every streak you earn, we will donate $1 to a mental health charity. Check the charity section to choose the charity you want to donate to. Come back in tomorrow to maintain your streak!"
        android:textColor="@color/BlueSapphire"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>